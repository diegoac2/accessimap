<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:src="@drawable/accessimap_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mainbuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintBottom_toTopOf="@+id/btb"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/newtrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/sanchez"
            android:text="@string/new_trip"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/utility"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/utility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="findUtility"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/sanchez"
            android:text="@string/utility"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.822"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.683" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/mid_blue"
            android:clickable="true"
            android:onClick="openHistory"
            android:drawableTop="@drawable/white_historyicon"
            android:fontFamily="@font/sanchez"
            android:scaleType="fitXY"
            android:text="@string/history"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/mid_blue"
            android:clickable="true"
            android:onClick="openSettings"
            android:drawableTop="@drawable/white_settings"
            android:fontFamily="@font/sanchez"
            android:scaleType="fitXY"
            android:text="@string/settings"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/mid_blue"
            android:clickable="true"
            android:onClick="utilityInfo"
            android:drawableTop="@drawable/white_info"
            android:fontFamily="@font/sanchez"
            android:scaleType="fitXY"
            android:text="@string/help"
            android:textSize="20sp"
            app:cornerRadius="0dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>